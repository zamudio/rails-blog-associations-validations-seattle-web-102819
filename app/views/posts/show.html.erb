<p id="notice"><%= notice %></p>

<p>
  <h3>Name: <%= @post.name %></h3>
  <h3>Content: <%= @post.content %></h3>
  <h3>Tags: </h3>
  <ul>
    <% @post.tags.each do |tag| %>
      <li><%= tag.name %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>